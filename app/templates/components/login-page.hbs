<h2>Login page</h2>

<form {{action 'authenticate' on='submit'}}>
  <div class="form-group">
    {{input value=login placeholder='Login'  class="form-control"}}
  </div>
  <div class="form-group">
    {{input value=password placeholder='Password' type='password'  class="form-control"}}
  </div>
  <button type="submit" class="btn btn-default">Login</button>
</form>